<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samuel.pitscoutingapp2017.Page2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ball Capacity"
        android:id="@+id/textView8"
        android:textColor="#0B0B61"
        android:textColorHighlight="#FE9A2E"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0-10"
        android:id="@+id/radioButton010"
        android:layout_below="@+id/textView8"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11-20"
        android:id="@+id/radioButton1120"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21-30"
        android:id="@+id/radioButton2130"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31+"
        android:id="@+id/radioButton31"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Layout"
        android:id="@+id/textView9"
        android:textColor="#DF7401"
        android:textColorHighlight="#08088A"
        android:textSize="24dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/radioButton1120"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertical"
        android:id="@+id/radioButtonVertical"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/radioButton2130"
        android:layout_toStartOf="@+id/radioButton2130" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horizontal"
        android:id="@+id/radioButtonHorizontal"
        android:layout_alignTop="@+id/radioButtonVertical"
        android:layout_toRightOf="@+id/radioButton1120"
        android:layout_toEndOf="@+id/radioButton1120" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shooting"
        android:id="@+id/textView10"
        android:textColor="#0B0B61"
        android:textColorHighlight="#FE9A2E"
        android:textSize="24dp"
        android:layout_below="@+id/radioButtonVertical"
        android:layout_alignRight="@+id/checkBoxAluminium"
        android:layout_alignEnd="@+id/checkBoxAluminium"
        android:layout_marginTop="42dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High"
        android:id="@+id/checkBoxHigh"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/radioButtonHorizontal"
        android:layout_toStartOf="@+id/radioButtonHorizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low"
        android:id="@+id/checkBoxLow"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/radioButtonHorizontal"
        android:layout_alignStart="@+id/radioButtonHorizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Collecting"
        android:id="@+id/textView11"
        android:textColor="#DF7401"
        android:textColorHighlight="#08088A"
        android:textSize="24dp"
        android:layout_below="@+id/checkBoxHigh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gears"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_toLeftOf="@+id/radioButton010"
        android:layout_toStartOf="@+id/radioButton010" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ground"
        android:id="@+id/checkBoxGroundG"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/checkBoxHigh"
        android:layout_alignEnd="@+id/checkBoxHigh" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:id="@+id/checkBoxPlayer"
        android:layout_alignTop="@+id/checkBoxGroundG"
        android:layout_toRightOf="@+id/checkBoxGroundG"
        android:layout_toEndOf="@+id/checkBoxGroundG" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fuel"
        android:id="@+id/textView13"
        android:layout_below="@+id/checkBoxGroundG"
        android:layout_toLeftOf="@+id/radioButton010"
        android:layout_toStartOf="@+id/radioButton010" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ground"
        android:id="@+id/checkBoxGroundF"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/checkBoxGroundG"
        android:layout_alignEnd="@+id/checkBoxGroundG" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hopper"
        android:id="@+id/checkBoxHopper"
        android:layout_below="@+id/textView13"
        android:layout_toRightOf="@+id/checkBoxGroundF"
        android:layout_toEndOf="@+id/checkBoxGroundF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rope"
        android:id="@+id/textView14"
        android:textColor="#0B0B61"
        android:textColorHighlight="#FE9A2E"
        android:textSize="24dp"
        android:layout_below="@+id/checkBoxGroundF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:id="@+id/checkBoxCustom"
        android:layout_below="@+id/textView14"
        android:layout_alignRight="@+id/checkBoxGroundF"
        android:layout_alignEnd="@+id/checkBoxGroundF" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:id="@+id/checkBoxDefault"
        android:layout_alignTop="@+id/checkBoxCustom"
        android:layout_alignLeft="@+id/checkBoxHopper"
        android:layout_alignStart="@+id/checkBoxHopper" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Frame"
        android:id="@+id/textView15"
        android:textColor="#DF7401"
        android:textColorHighlight="#08088A"
        android:textSize="24dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/checkBoxCustom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aluminium"
        android:id="@+id/checkBoxAluminium"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steel"
        android:id="@+id/checkBoxSteel"
        android:layout_alignTop="@+id/checkBoxAluminium"
        android:layout_toRightOf="@+id/checkBoxAluminium"
        android:layout_toEndOf="@+id/checkBoxAluminium" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wood"
        android:id="@+id/checkBoxWood"
        android:layout_alignTop="@+id/checkBoxAluminium"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/buttonSubmit"
        android:onClick="SendCSV"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
